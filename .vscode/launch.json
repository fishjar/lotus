    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch lotus",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            // "program": "${file}",
            "program": "${workspaceFolder}/cmd/lotus",
            "env": {
                "FIL_PROOFS_USE_GPU_COLUMN_BUILDER": 0,
                "FIL_PROOFS_USE_GPU_TREE_BUILDER": 0,
                "LOTUS_SKIP_GENESIS_CHECK": "_yes_",
                "FIL_PROOFS_PARAMETER_CACHE": "/home/gabe/code/zq/params/filecoin-proof-parameters",
                "FIL_PROOFS_PARENT_CACHE": "/home/gabe/code/zq/params/filecoin-parents",
                "LOTUS_PATH": "${workspaceFolder}/data/lotus",
                "LOTUS_SECTOR_PATH": "${workspaceFolder}/data/genesis-sectors"
            },
            "args": [
                "daemon",
                // "--api=12340",
                "--lotus-make-genesis=${workspaceFolder}/data/devgen.car",
                "--genesis-template=${workspaceFolder}/data/localnet.json",
                "--bootstrap=false"
            ]
        }

    ]
}